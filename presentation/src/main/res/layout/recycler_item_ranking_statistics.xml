<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/text_view_rank"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/medium_10"
            android:text="@string/main_knot_detail_ranking"
            tools:text="1위."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/medium_10"
            android:layout_marginStart="4dp"
            tools:text="경석"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_rank" />

        <TextView
            android:id="@+id/text_view_percent"
            app:layout_constraintTop_toTopOf="@id/text_view_name"
            app:layout_constraintBottom_toBottomOf="@id/text_view_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/regular_10"
            android:text="@string/main_knot_detail_only_percent"
            tools:text="67%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>