<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_today_circle"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:visibility="invisible"
            android:background="@drawable/ic_circle_today_ffcc00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_day_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/bold_14"
            android:textColor="@color/color_e05744"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_today_circle"
            tools:text="3" />

        <View
            android:id="@+id/image_view_day_schedule_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:visibility="invisible"
            android:background="@drawable/bg_rectangle_filled_ffcc00"
            app:layout_constraintTop_toBottomOf="@id/text_view_day_date" />

        <View
            android:id="@+id/image_view_day_gathering_schedule_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:visibility="invisible"
            android:background="@drawable/bg_rectangle_filled_e5e5e5"
            app:layout_constraintTop_toBottomOf="@id/image_view_day_schedule_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>